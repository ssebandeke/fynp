
            <%= form_for(@product) do |f| %>
              <% if @product.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

                  <ul>
                  <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
                <%= f.label :title %>
                <%= f.text_field :title %>

                <%= f.label :description %>
                <%= f.text_area :description %><br/>
                <%= f.label :category%>
                <%= f.select :category_id , Category.all.map{|c| [c.name,c.id]} %>
                <%= f.label :start_time%>
                <%= f.date_select :start_time,:start_year =>(Date.today.year) ,:end_year =>Date.today.year+1 ,:add_month_numbers => true %>


                <%= f.label :end_time %>
                <%= f.date_select :end_time,:start_year =>(Date.today.year) ,:end_year =>Date.today.year+2 ,:add_month_numbers => true %>
                <!--
                <%= f.date_field :end_time %> -->

                <%= f.label :minimum_bid %>
                <%= f.text_area :minimum_bid %>

                <%= f.label :image %>
                <%= f.file_field :image %>


                <%= f.submit "create product",class: "btn span2 btn-realto-form btn-large" %>

            <% end %>
